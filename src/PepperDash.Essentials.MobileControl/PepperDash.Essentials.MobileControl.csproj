  </ItemGroup>
  <ItemGroup>
    <Compile Remove="MobileControlSimplDeviceBridge.cs" />
    <Compile Remove="RoomBridges\MobileControlSIMPLRoomBridge.cs" />
    <Compile Remove="RoomBridges\SourceDeviceMapDictionary.cs" />
  </ItemGroup>  
